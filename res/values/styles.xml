<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Bicikel" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="StationList.Numbers" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">30sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    
    <style name="StationList.Numbers.Free" parent="@style/StationList.Numbers">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">24sp</item>
    </style> 
    <style name="StationList.Numbers.Full" parent="@style/StationList.Numbers">
        <item name="android:textColor">@color/primary</item>
    </style>
    
    <style name="StationList.Name" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#DD000000</item>
    </style>
    <style name="StationList.Labels" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#66000000</item>
    </style>
    <style name="StationList.Distance" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#69000000</item>
    </style>
    <style name="MapDetail.Switcher" parent="">
    	<item name="android:inAnimation">@android:anim/slide_in_left</item>
    	<item name="android:outAnimation">@android:anim/slide_out_right</item>    
    </style>

    <style name="StationList.Header" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#DD333333</item>
    </style>
</resources>