<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Bicikel" parent="Theme.Sherlock.Light.DarkActionBar"></style>   
    <style name="StationList.Numbers" parent="@android:style/TextAppearance.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">23sp</item>
    </style>
    
    <style name="StationList.Numbers.Free" parent="@style/StationList.Numbers">
        <item name="android:textColor">#669900</item>
    </style> 
    <style name="StationList.Numbers.Full" parent="@style/StationList.Numbers">
        <item name="android:textColor">#CC0000</item>
    </style>
    
    <style name="StationList.Name" parent="@android:style/TextAppearance.Small">
        <item name="android:typeface">serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="StationList.Labels" parent="@android:style/TextAppearance.Small"></style>
    <style name="StationList.Distance" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#888</item>
    </style>
    <style name="MapDetail.Switcher" parent="">
    	<item name="android:inAnimation">@android:anim/slide_in_left</item>
    	<item name="android:outAnimation">@android:anim/slide_out_right</item>    
    </style>
</resources>